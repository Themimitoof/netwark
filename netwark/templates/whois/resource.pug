extends ../layout/main

block content
    .container
        h1= siteOptions['pageTitle']

        .siimple-grid
            .siimple-grid-row

                    .siimple-grid-col.siimple-grid-col--5.siimple-grid-col--md-12
                        .siimple-card
                            .siimple-card-header
                                if data['type'] == 'ip'
                                    | IP informations
                                elif data['type'] == 'asn'
                                    | ASN informations
                                elif data['type'] == 'domain'
                                    | Domain informations
                            .siimple-card-body
                                table
                                    thead
                                        th(width="50%")
                                        th

                                    tbody
                                        if data['type'] == 'ip'
                                            tr
                                                td IP
                                                td
                                                    i= data['resource']

                                            tr
                                                td Type
                                                if data['ip_type']['public']
                                                    td public (#{data['ip_type']['type']})
                                                else
                                                    td= data['ip_type']['type']


                                            tr
                                                td Reverse DNS
                                                td
                                                    i= data['reverse_dns']

                                        if 'asn' in data
                                            tr
                                                td ASN
                                                td
                                                    i
                                                        if data['type'] == 'ip'
                                                            a(href="/whois/AS#{data['asn'].autonomous_system_number}") AS#{data['asn'].autonomous_system_number} (#{data['asn'].autonomous_system_organization})
                                                        else
                                                            | #{data['asn']}

                                        if 'as_name' in data
                                            tr
                                                td AS name
                                                td
                                                    i= data['as_name']

                                        if 'organization' in data
                                            tr
                                                td Organization
                                                td
                                                    i= data['organization']

                                        if 'location' in data
                                            tr
                                                td Location
                                                td
                                                    i #{data['location'].location.latitude}, #{data['location'].location.longitude}

                                        if data['type'] == 'domain'
                                            tr
                                                td Registrar
                                                td
                                                    i _Organization_

                    .siimple-grid-col.siimple-grid-col--7.siimple-grid-col--md-12
                        .siimple-tabs.siimple-tabs--boxed#whois-tabs(tabs-control="whois-tabs-control")
                            if 'location' in data
                                .siimple-tabs-item.siimple-tabs-item--selected(tab-block="geo") Geographic informations

                            if data['type'] == 'domain'
                                .siimple-tabs-item.siimple-tabs-item--selected(tab-block="zone") Zone informations

                            .siimple-tabs-item(tab-block="raw") Raw WHOIS

                        .tabs-controls#whois-tabs-control
                            if 'location' in data
                                .tabs-block#geo
                                    p map

                            if data['type'] == 'domain'
                                .tabs-block#zone
                                    p zone

                            .tabs-block#raw
                                .whois-block
                                    if data['whois_raw'] is None
                                        p Nothing from WHOIS server
                                    else
                                        each line in data['whois_raw']
                                            p= line

block append javascript
    script.
        tabs("#whois-tabs")